# Environment Variables for Enhanced Dual RAG System
# Replace the placeholder values with your actual API keys

# === SALES AGENT SYSTEM CONFIGURATION ===

# API Keys (Replace with your actual keys)
GROQ_API_KEY=your_groq_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Database Configuration
DATABASE_URL=sqlite:///sales_agent.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost/sales_agent_db
# For MySQL: DATABASE_URL=mysql://username:password@localhost/sales_agent_db

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Google ADK Configuration
PROTOCOL_BUFFERS_PYTHON_IMPLEMENTATION=python

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/sales_agent.log

# Application Settings
MAX_MESSAGE_LENGTH=2000
FOLLOW_UP_THRESHOLD_MINUTES=1
MAX_FOLLOW_UPS=3
SESSION_TIMEOUT_HOURS=24

# RAG System Configuration
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_MAX_RESULTS=5

# WebSocket Configuration  
SOCKETIO_ASYNC_MODE=threading
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# Production Settings (Set these for production deployment)
# FLASK_ENV=production
# FLASK_DEBUG=False
# DATABASE_URL=postgresql://username:password@localhost/sales_agent_prod
# SECRET_KEY=your-very-secure-production-secret-key 